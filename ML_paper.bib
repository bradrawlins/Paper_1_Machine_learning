file = {:D$\backslash$:/PHD{\_}THESIS{\_}REVISIONS/LITERATURE{\_}REVIEW/MACHINE{\_}LEARNING/Data-driven forecasting with model uncertainty of utility-scale aircooled-Raidoo.pdf:pdf},
issn = {03605442},
journal = {Energy},
keywords = {Air-cooled condensers,Deep learning,Mixture density networks,Recurrent neural networks,Time-series prediction},
pages = {122030},
publisher = {Elsevier Ltd},
title = {{Data-driven forecasting with model uncertainty of utility-scale air-cooled condenser performance using ensemble encoder-decoder mixture-density recurrent neural networks}},
url = {https://doi.org/10.1016/j.energy.2021.122030},
volume = {238},
year = {2022}
