journal = {Fuel},
keywords = {Coal blends,Combustion characteristics,Computational fluid dynamics,Pulverised coal combustion},
number = {11-12},
pages = {1543--1552},
title = {{A computational fluid dynamics based study of the combustion characteristics of coal blends in pulverised coal-fired furnace}},
volume = {83},
year = {2004}
}
