issn = {00162361},
journal = {Fuel},
keywords = {700 C power plant,CFD,Coal-fired boiler,Coupled simulation},
number = {January},
pages = {149--163},
publisher = {Elsevier Ltd},
title = {{Coupled simulation of a tangentially hard coal fired 700 C boiler}},
